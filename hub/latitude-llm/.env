PROJECT=latitude-llm
DOMAIN=stack.localhost

# Environment
NODE_ENV=production

# Database
POSTGRES_USER=latitude
POSTGRES_PASSWORD=latitude_secure_password
DATABASE_URL=postgresql://latitude:latitude_secure_password@database:5432/latitude_production

# Redis
QUEUE_PORT=6379
QUEUE_HOST=redis
CACHE_PORT=6379
CACHE_HOST=redis
CACHE_PASSWORD=

# Gateway Configuration
GATEWAY_BIND_ADDRESS=localhost
GATEWAY_BIND_PORT=8787
GATEWAY_HOSTNAME=gateway
GATEWAY_PORT=8080
GATEWAY_SSL=false

# Networking
APP_DOMAIN=$PROJECT.$DOMAIN
APP_URL=https://$PROJECT.$DOMAIN
NEXT_PUBLIC_DOCS_URL=https://docs.latitude.so

# Traefik
TRAEFIK_HOST=traefik.$PROJECT.$DOMAIN
TRAEFIK_ACME_EMAIL=admin@$PROJECT.$DOMAIN
TRAEFIK_API_INSECURE=false
TRAEFIK_ADMIN_PASS=admin_secure_password

# Websockets
WEBSOCKETS_SERVER=http://websockets
WEBSOCKETS_SERVER_PORT=8080
WEBSOCKET_REFRESH_SECRET_TOKEN_KEY=websocket-refresh-secret-token
WEBSOCKET_SECRET_TOKEN_KEY=websocket-secret-token

# Email Configuration
MAIL_TRANSPORT=mailpit
FROM_MAILER_EMAIL=hello@$PROJECT.$DOMAIN
MAILGUN_EMAIL_DOMAIN=$PROJECT.$DOMAIN
MAILGUN_MAILER_API_KEY=
MAILGUN_HOST=api.eu.mailgun.net
MAILGUN_PROTOCOL=https

# SMTP Email Configuration
SMTP_HOST=
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=
SMTP_PASS=

# File Storage
DRIVE_DISK=local
FILE_STORAGE_ROOT_PATH=/app/storage/files
FILE_PUBLIC_PATH=files
FILES_STORAGE_PATH=/app/storage/files
PUBLIC_FILES_STORAGE_PATH=/app/apps/web/public/files

# AWS S3 (optional)
AWS_REGION=
AWS_ACCESS_KEY=
AWS_ACCESS_SECRET=
PUBLIC_S3_BUCKET=
S3_BUCKET=

# GCS (optional)
GCS_BUCKET=
GCS_PUBLIC_BUCKET=
GCS_PROJECT_ID=
GCS_KEY_FILENAME=
GCS_CLIENT_EMAIL=
GCS_PRIVATE_KEY=

# Analytics (optional)
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://$PROJECT.$DOMAIN/api/auth/google/callback

# Next.js Server Actions
NEXT_SERVER_ACTIONS_ENCRYPTION_KEY=your-32-character-encryption-key

# Default Provider API Key
DEFAULT_PROVIDER_API_KEY=your-openai-api-key
