PROJECT=moneyprinterturbo
DOMAIN=stack.localhost

# Application settings
APP_URL=https://$PROJECT.$DOMAIN

# Video material API keys (Pexels - register at https://www.pexels.com/api/)
PEXELS_API_KEYS=your-pexels-api-key-here

# Pixabay API keys (register at https://pixabay.com/api/docs/)
PIXABAY_API_KEYS=your-pixabay-api-key-here

# AI Model Configuration (choose one)
# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL_NAME=gpt-3.5-turbo

# Alternative: DeepSeek (recommended for Chinese users)
DEEPSEEK_API_KEY=your-deepseek-api-key
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL_NAME=deepseek-chat

# Alternative: Moonshot
MOONSHOT_API_KEY=your-moonshot-api-key
MOONSHOT_BASE_URL=https://api.moonshot.cn/v1
MOONSHOT_MODEL_NAME=moonshot-v1-8k

# Video Configuration
VIDEO_SOURCE=pexels
SUBTITLE_PROVIDER=edge
HIDE_CONFIG=false

# Azure TTS (optional for better voice synthesis)
AZURE_TTS_KEY=your-azure-tts-key
AZURE_TTS_REGION=your-region

# Redis (optional for task state management)
ENABLE_REDIS=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Concurrent tasks
MAX_CONCURRENT_TASKS=5

# UI Settings
HIDE_LOG=false
