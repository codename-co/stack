            rel="nofollow"
            class="inline-flex highlight"
          >
            <DownloadBase>
              <svg
                class="fill-current w-4 h-4 m-1 inline"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 17 17"
              >
                <path d="M2 1l14 7-14 7z"></path>
              </svg>
              <span set:html={t("Start it now")} />
