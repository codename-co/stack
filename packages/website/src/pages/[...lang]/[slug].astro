              </ol>
            </div>
          )
        }
        {
          similar && similar.length > 0 && (
            <div class="box 2xl:bg-slate-50">
              <h2 set:html={t("Related")} />
              <ol>
                {similar
                  .map((e) => e as any)
                  .map(({ slug, name, description, tags: _tags, stars }) => (
                    <li class="mb-8">
                      {/* <div class="float-right mr-6 if-connected">
